{
  "puppet_task_version": 1,
  "supports_noop": false,
  "description": "Show details about mirror",
  "input_method": "stdin",
  "implementations": [
    {
      "name": "mirror.rb"
    }
  ],
  "files": [
    "ruby_task_helper/files/task_helper.rb",
    "aptly/lib/aptly_task_helper.rb",
    "aptly/lib/puppet_x/voxpupuli/aptly/cli_helper.rb"
  ],
  "parameters": {
    "name": {
      "description": "Mirror name",
      "type": "String[1]"
    },
    "with_packages": {
      "description": "Show detailed list of packages and versions stored in the mirror",
      "type": "Optional[Boolean]"
    },
    "config": {
      "description": "Location of configuration file",
      "type": "Optional[Stdlib::Absolutepath]"
    }
  }
}
